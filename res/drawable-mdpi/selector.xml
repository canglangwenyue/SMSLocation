<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true">
- <shape>
  <solid android:color="#8B6914" /> 
  <stroke android:width="2dp" android:color="#8B0A50" /> 
  <corners android:topRightRadius="6dp" android:bottomLeftRadius="6dp" android:topLeftRadius="0dp" android:bottomRightRadius="0dp" /> 
  <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp" /> 
  </shape>
  </item>
- <item android:state_focused="true">
- <shape>
  <gradient android:startColor="#707070" android:endColor="#7A67EE" android:angle="90" /> 
  <corners android:radius="2dp" /> 
  <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" /> 
  </shape>
  </item>
- <item>
- <shape>
  <gradient android:startColor="#FFFFFF" android:endColor="#000000" android:type="radial" android:gradientRadius="200" /> 
  <stroke android:width="2dp" android:color="#008B00" android:dashWidth="5dp" android:dashGap="3dp" /> 
  <corners android:radius="2dp" /> 
  <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" /> 
  </shape>
  </item>
    
</selector>
